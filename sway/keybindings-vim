# resize focused window

bindsym $mod+ALT+k resize shrink height 20px
bindsym $mod+ALT+h resize shrink width 20px
bindsym $mod+ALT+j resize grow height 20px
bindsym $mod+ALT+l resize grow width 20px

# move focus

bindsym $mod+k focus up
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+l focus right

# move focused window

bindsym $mod+SHIFT+k move up
bindsym $mod+SHIFT+h move left
bindsym $mod+SHIFT+j move down
bindsym $mod+SHIFT+l move right

# move focused window around workspaces : works different from my expectations

# bindsym $mod+SHIFT+CTRL+h move window to workspace prev_on_output
# bindsym $mod+SHIFT+CTRL+l move window to workspace next_on_output

